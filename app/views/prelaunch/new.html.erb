<% if flash[:notice] %>
  <%= flash[:notice].html_safe %>
<% else %>

  <div class="header">
    <div class="header-text">
      <h1 class="header-title"><b>Coming Soon</b></h1>
      <br>
      <p>Our new website is launching soon.</p>
      <p>Add your email to the list and you will be the first to know when we are ready.</p>
      <%= form_for @prelaunch_subscriber, :url => prelaunch_path do |f| %>
        <div class="field">
          <%= f.text_field :email %>
          <% if @prelaunch_subscriber.errors[:email] %>
            <div class="form-error"><%= @prelaunch_subscriber.errors[:email].first %></div>
          <% end %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit 'Add me to the list', class: 'btn btn-large btn-default btn-subscribe' %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
